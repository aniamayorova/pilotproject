    android:orientation="horizontal"
    android:padding="5dip" >  
    
    <RelativeLayout
        android:id="@+id/txt0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >
        
        <TextView
            android:id="@+id/textview5"
